<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:id="@+id/activity_home_team"
    tools:context="com.anoniq.gabort.oio.HomeTeamActivity">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="10"
        android:columnCount="12"
        android:padding="15dp">

            <Button
                android:text="@string/backtostart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gobackhome"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="0"
                />



        <!--START LINE 1-->
        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:textColor="@color/colorLine"
            android:textSize="25dp"
            android:text="@string/firstline"
            android:paddingLeft="15dp" />
        <Button
            android:text="f1.1"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerf1"
            android:padding="20dp"
            android:textSize="50sp" />
        <Button
            android:text="f1.2"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerf2"
            android:padding="20dp"
            android:textSize="50sp" />
        <Button
            android:text="f1.3"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerf3"
            android:padding="20dp"
            android:textSize="50sp" />

        <Button
            android:text="d1.1"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerd1"
            android:padding="20dp"
            android:textSize="50sp" />
        <Button
            android:text="d1.2"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerd2"
            android:padding="20dp"
            android:textSize="50sp" />

        <!--END LINE 1-->

        <!--START LINE 2-->
        <LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:text="@string/spaces"/>

        </LinearLayout>
        <TextView
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:textColor="@color/colorLine"
            android:textSize="25dp"
            android:text="@string/secondline"
            android:paddingLeft="15dp" />

        <Button
            android:text="f2.1"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerf4"
            android:padding="20dp"
            android:textSize="50sp" />

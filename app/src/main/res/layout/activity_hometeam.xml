            android:padding="20dp"
            android:textSize="50sp" />
        <Button
            android:text="f2.3"
            android:layout_row="6"
            android:layout_column="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerf6"
            android:padding="20dp"
            android:textSize="50sp" />

        <Button
            android:text="d2.1"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerd3"
            android:padding="20dp"
            android:textSize="50sp" />

        <Button
            android:text="d2.2"
            android:layout_row="7"
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerd4"
            android:padding="20dp"
            android:textSize="50sp" />
        <!--END LINE 2-->

        <!--START LINE 3 -->

    <TextView
        android:layout_row="1"
        android:layout_column="6"
        android:layout_columnSpan="3"
        android:textColor="@color/colorLine"
        android:textSize="25dp"
        android:text="@string/thirdline"
        android:paddingLeft="15dp" />

    <Button
        android:text="f3.1"
        android:layout_row="2"
        android:layout_column="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerf7"
        android:padding="20dp"
        android:textSize="50sp" />
    <Button
        android:text="f3.2"
        android:layout_row="2"
        android:layout_column="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerf8"
        android:padding="20dp"
        android:textSize="50sp" />
    <Button
        android:text="f3.3"
        android:layout_row="2"
        android:layout_column="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerf9"
        android:padding="20dp"
        android:textSize="50sp" />

        <Button
            android:text="d3.1"
            android:layout_row="3"
            android:layout_column="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerd5"
            android:padding="20dp"
            android:textSize="50sp" />
        <Button
            android:text="d3.2"
            android:layout_row="3"
            android:layout_column="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerd6"
            android:padding="20dp"
            android:textSize="50sp" />

        <!--END LINE 3-->

        <!--START LINE 4 -->

        <TextView
            android:layout_row="5"
            android:layout_column="6"
            android:layout_columnSpan="3"
            android:textColor="@color/colorLine"
            android:textSize="25dp"
            android:text="@string/fourthline"
            android:paddingLeft="15dp" />

        <Button
            android:text="f4.1"
            android:layout_row="6"
            android:layout_column="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient android:angle="270"
                android:endColor="@color/yellow2" android:startColor="@color/yellow1" />
            <stroke android:width="3sp"
                android:color="@color/grey05" />
            <corners android:radius="3sp" />
            <padding android:bottom="@dimen/buttonbackgroundpadding" android:left="@dimen/buttonbackgroundpadding" android:right="@dimen/buttonbackgroundpadding" android:top="@dimen/buttonbackgroundpadding" />
        </shape>
    </item>

    <item android:state_selected="true" >
        <shape>
            <gradient android:angle="270"
                android:endColor="@color/green2" android:startColor="@color/green1" />
            <stroke android:width="3sp"
                android:color="@color/grey05" />
            <corners android:radius="3sp" />
            <padding android:bottom="@dimen/buttonbackgroundpadding" android:left="@dimen/buttonbackgroundpadding" android:right="@dimen/buttonbackgroundpadding" android:top="@dimen/buttonbackgroundpadding" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient android:angle="270"
                android:endColor="@color/orange4" android:startColor="@color/orange5" />
            <stroke android:width="3sp"
                android:color="@color/grey05" />
            <corners android:radius="3sp" />
            <padding android:bottom="@dimen/buttonbackgroundpadding" android:left="@dimen/buttonbackgroundpadding" android:right="@dimen/buttonbackgroundpadding" android:top="@dimen/buttonbackgroundpadding" />
        </shape>
    </item>

    <item android:state_selected="false">
        <shape>
            <gradient android:angle="270"
                android:endColor="@color/gray" android:startColor="@color/darkgray" />
            <stroke android:width="3sp"
                android:color="@color/grey05" />
            <corners android:radius="3sp" />
            <padding android:bottom="@dimen/buttonbackgroundpadding" android:left="@dimen/buttonbackgroundpadding" android:right="@dimen/buttonbackgroundpadding" android:top="@dimen/buttonbackgroundpadding" />
        </shape>
    </item>
</selector>